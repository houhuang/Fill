<?xml version="1.0" encoding="utf-8"?>
<com.jd.fill.adapter.MapItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/map_item_bg_gray">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_content"
            android:background="@drawable/map_item_bg_content"
            android:layout_centerInParent="true"
            android:layout_margin="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/map_text"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#FFF"/>

</com.jd.fill.adapter.MapItemLayout>
